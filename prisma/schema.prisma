generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("NEXT_MONGODB_URL")
}

model articles {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    v               Int      @map("__v") @default(1)
    createdAt       DateTime @db.Date
    createdBy       String
    description     String
    imageUrl        String
    longDescription String
    tags            String[]
    title           String
    url             String   @unique(map: "url_1")
}

model users {
    id             String @id @default(auto()) @map("_id") @db.ObjectId
    email          String @unique(map: "email_1")
    firstName      String
    lastName       String
    password       String
    profilePicture String
    role           String
}
